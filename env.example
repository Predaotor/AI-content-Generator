# Railway Database Configuration
# Get these values from your Railway project dashboard

# For Local Development (External URL)
DATABASE_PUBLIC_URL=postgresql://username:password@containers-us-west-XX.railway.app:port/database_name

# For Railway Deployment (Internal URL) - Optional for local dev
DATABASE_URL=postgresql://username:password@postgres.railway.internal:port/database_name

# Backend Configuration (backend-AI/.env)
# Copy this content to backend-AI/.env file

# Database Configuration (Railway)
# Use DATABASE_PUBLIC_URL for local development
DATABASE_PUBLIC_URL=postgresql://username:password@containers-us-west-XX.railway.app:port/database_name

# Security
SECRET_KEY=your_super_secret_key_here_make_it_long_and_random
JWT_SECRET_KEY=your_jwt_secret_key_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Application Configuration
ENVIRONMENT=production
DEBUG=false

# Frontend Configuration (for docker-compose)
NEXT_PUBLIC_API_URL=http://localhost:8000
NODE_ENV=production

# Optional: SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem 